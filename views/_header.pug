header.header
  nav.nav.nav--tours 
    a.nav__el(href='/') All tours
  .header__logo 
    img.header__logo-img(src='/img/logo-white.png', alt='Natours logo')
  nav.nav.nav--user
    if !user 
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up
    else 
      a.nav__el.nav__el--logout(href='/me') Logout
      a.nav__el.nav__user-img(href='/account')
        img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.name}`)
        span= `${user.name.split(' ')[0]}`
